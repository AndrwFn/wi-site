@require 'nib'

@require 'variables'
@require 'mixins'
@require 'fonts'
@require 'icons'

global-reset()
reset-html5()

html, body
	reset-box-model()
	font-metrics 0 0
	size: 100%

body
	background white
	color black

header
	$height = 112px
	$logo-height = 55px

	size 100% $height
	z-index 1
	fixed(0, auto, auto, 0)
	//background $header-bg-color

	.logo
		display block
		position absolute
		left 29px
		top (($height - $logo-height) / 2)
		text-decoration none

		img.logo_image, .logo_text
			display inline-block
			vertical-align: middle

		img.logo_image
			size $logo-height

		.logo_text
			custom-font('SansRoundedLightC', normal, 22px, 24px)
			color white
			text-transform uppercase
			margin-left 19px
			padding-top: 2px

@require 'general_cards'
