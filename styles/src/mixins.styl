// sizes mixins

size($w, $h=$w)
	width $w
	height $h

font-metrics($fs=inherit, $lh=inherit)
	font-size $fs
	line-height $lh

// paths mixins

rel-path($rel-path)
	pathjoin($root-path, $rel-path) + $rev-qs

img-path($rel-path)
	pathjoin($images-path, $rel-path) + $rev-qs

// bg

bg-img($path)
	background-image: url(img-path($path))

bg($path, $addit)
	background: url(img-path($path)) $addit

// position

edge-sizes($top=auto, $right=auto, $bottom=auto, $left=auto)
	top $top
	right $right
	bottom $bottom
	left $left

relative($top=auto, $right=auto, $bottom=auto, $left=auto)
	position relative
	edge-sizes($top, $right, $bottom, $left)

absolute($top=auto, $right=auto, $bottom=auto, $left=auto)
	position absolute
	edge-sizes($top, $right, $bottom, $left)

fixed($top=auto, $right=auto, $bottom=auto, $left=auto)
	position fixed
	edge-sizes($top, $right, $bottom, $left)

absolute-stretch($amount)
	edge-sizes($amount, $amount, $amount, $amount)

fixed-stretch($amount)
	edge-sizes($amount, $amount, $amount, $amount)

// pseudo blocks

pseudo($content='', $display=inline)
	content $content
	display $display

pseudo-block($content='')
	pseudo($content, block)
