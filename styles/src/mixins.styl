size($w, $h=$w)
	width $w
	height $h

font-metrics($fs=inherit, $lh=inherit)
	font-size $fs
	line-height $lh

rel-path($rel-path)
	pathjoin($root-path, $rel-path) + $rev-qs

img-path($rel-path)
	pathjoin($images-path, $rel-path) + $rev-qs
