$icons = {
	arrow: {
		src: vector-icon-src('down-arrow.svg')
		width: 32px
		height: 20px
	}
	show-menu: {
		src: icon-src('show-menu.png')
		width: 55px
		height: 55px
	}
	show-menu-active: {
		src: icon-src('show-menu-active.png')
		width: 55px
		height: 55px
	}
}

icon($icon)
	$src = $icon.src
	size(($icon.width), ($icon.height))
	background url($src) 0 0 no-repeat
