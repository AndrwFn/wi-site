header
	$height = 112px
	$logo-size = 55px

	size 100% $height
	z-index 1
	fixed(0, auto, auto, 0)
	//background $header-bg-color

	.logo
		display block
		text-decoration none
		absolute((($height - $logo-size) / 2), auto, auto, 29px)

		img.logo-image, .logo-text
			display inline-block
			vertical-align middle

		img.logo-image
			size $logo-size

		.logo-text
			custom-font('SansRoundedLightC', normal, 22px, 24px)
			color white
			text-transform uppercase
			margin-left 19px
			padding-top 2px

	.call-menu
		display block
		text-decoration none
		absolute(28px, 15px)
		size(($icon-show-menu.width), ($icon-show-menu.height))

		&:before
			pseudo-block()
			absolute(0, auto, auto, 0)
			icon($icon-show-menu)
