header
	$height-1 = 0px
	$height-2 = 96px
	$height-3 = 112px

	$logo-size-2 = 41px
	$logo-size-3 = 55px
	$speed = ($animation-speed * 4)

	size 100%
	z-index 1
	absolute(0, auto, auto, 0)
	transition height $animation-speed $animation-curve
	min-width $min-width

	.fixed-header
		fixed(0, auto, auto, 0)
		size 100%, $height-3
		z-index 1
		min-width $min-width

		@media (max-width: ($responsive-2))
			height $height-2

	body.loaded &
		size 100% $height-3

		@media (max-width: ($responsive-2))
			height $height-2

	.logo
		display inline-block
		text-decoration none
		z-index 2
		white-space nowrap
		absolute(50%, auto, auto, 50%)
		transform translate(-50%, -50%)
		transition transform $speed $animation-curve,
			left $speed $animation-curve,
			top $speed $animation-curve

		img.logo-image, .logo-text
			display inline-block
			vertical-align middle

		img.logo-image
			size $logo-size-3
			transform rotate(0deg)

			@media (max-width: ($responsive-2))
				size $logo-size-2

		.logo-text
			custom-font('SansRoundedLightC', normal, 22px, 24px)
			color white
			text-transform uppercase
			padding-top 2px
			opacity 0
			width 0
			margin-left 0
			overflow hidden
			transition width $animation-speed $animation-curve,
				opacity $animation-speed $animation-curve,
				margin-left $animation-speed $animation-curve

			@media (max-width: ($responsive-2))
				font-metrics(16px, 18px)

			@media (min-width: ($responsive-2)) and (max-width 1110px)
				display none

			@media (min-width: ($responsive-1)) and (max-width 940px)
				display none

		&.logo-move
			transform translate(0, 0)
			left 29px
			top (($height-3 - $logo-size-3) / 2)

			@media (max-width: ($responsive-2))
				top (($height-2 - $logo-size-2) / 2)

		body.loaded &
			.logo-text
				width auto
				opacity 1
				margin-left 19px

				@media (max-width: ($responsive-2))
					margin-left 19px - 5px

	@import 'header-menu'
