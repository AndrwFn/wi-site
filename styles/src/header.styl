header
	$height = 112px
	$logo-size = 55px
	$speed = ($animation-speed * 4)

	size 100%
	z-index 1
	absolute(0, auto, auto, 0)
	transition height $animation-speed $animation-curve

	.fixed-header
		fixed(0, auto, auto, 0)
		size 100%, $height
		z-index 1

	body.loaded &
		size 100% $height

	.logo
		display inline-block
		text-decoration none
		z-index 2
		white-space nowrap
		absolute(50%, auto, auto, 50%)
		transform translate(-50%, -50%)
		transition transform $speed $animation-curve,
			left $speed $animation-curve,
			top $speed $animation-curve

		img.logo-image, .logo-text
			display inline-block
			vertical-align middle

		img.logo-image
			size $logo-size
			transform rotate(0deg)

		.logo-text
			custom-font('SansRoundedLightC', normal, 22px, 24px)
			color white
			text-transform uppercase
			padding-top 2px
			opacity 0
			width 0
			margin-left 0
			overflow hidden
			transition width $animation-speed $animation-curve,
				opacity $animation-speed $animation-curve,
				margin-left $animation-speed $animation-curve

		&.logo-move
			transform translate(0, 0)
			left 29px
			top (($height - $logo-size) / 2)

		body.loaded &
			.logo-text
				width auto
				opacity 1
				margin-left 19px

	@import 'header-menu'
